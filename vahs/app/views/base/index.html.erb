<% title "BVA Resource Management System" %>
<div id="content" class="container" role="main">
  <div class="table-links-container">
    <%= auth_content_for :admin, :employee do %>
      <div class="table-links">
        <div class="header">Data Entry &amp; Maintenance</div>
        <div class="links">
          <ul role="menu">
            <li role="menuitem"><%= auth_link_to "Create Employee Record", rms_employee_new_path, 'aria-label': 'Create an Employee Record' %></li>
            <li role="menuitem"><%= auth_link_to "Modify Employee Record", rms_employee_search_path, 'aria-label': 'Find an Employee and update their record' %></li>
            <li role="menuitem"><%= auth_link_to "Create/Modify Applicant Record", rms_applicant_path, 'aria-label': 'Create or Modify an Applicant Record' %></li>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="table-links">
      <div class="header">Research &amp; Analysis</div>
      <div class="links">
        <ul role="menu">
          <li role="menuitem"><%= auth_link_to "Employee Locator", '#', 'aria-label': 'Find and locate an employee' %></li>

          <%= auth_content_for :admin, :employee do %>
            <li role="menuitem"><%= auth_link_to "Employee Record Search", rms_employee_search_path, 'aria-label': 'Search for an employee' %></li>
          <% end %>

          <%= auth_content_for :admin, :report do %>
            <li role="menuitem"><%= auth_link_to "Reports", rms_reports_path, 'aria-label': 'Reports Portal' %></li>
            <li role="menuitem"><%= auth_link_to "PAID File Update Report", '#', 'aria-label': 'PAID file exception report' %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <%= auth_content_for :admin do %>
      <div class="table-links">
        <div class="header">Administrative Tools</div>
        <div class="links">
          <ul role="menu">
            <li role="menuitem"><%= auth_link_to "Contact Us", '#', 'aria-label': 'Contact us' %></li>
            <li role="menuitem"><%= auth_link_to "Resource Guide", '#', 'aria-label': 'Resource Guide' %></li>
            <li role="menuitem"><%= auth_link_to "Roles & Privileges", '#', 'aria-label': 'Manage roles and privileges' %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
